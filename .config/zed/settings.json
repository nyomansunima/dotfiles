// Zed settings
//
// For information on how to configure Zed: true see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run the `open default settings` command
// from the command palette or from `Zed` application menu.
{
  "features": {
    "edit_prediction_provider": "zed",
    "copilot": false
  },

  // theme, icons, tweaks
  "theme": {
    "dark": "One Thing Cool Dark",
    "light": "One Thing Cool Light"
  },
  "icon_theme": "Zed (Default)",

  // user interfaces settings
  "ui_font_family": ".SystemUIFont",
  "ui_font_weight": 500,
  "ui_font_size": 15.5,
  "format_on_save": "on",
  "show_call_status_icon": false,

  "formatter": "auto",
  "ui_font_features": {
    "ss01": true,
    "ss02": true,
    "ss03": true,
    "ss04": true,
    "ss05": true,
    "ss06": true,
    "zero": true,
    "onum": true,
    "calt": true
  },
  "agent": {
    "button": false,
    "dock": "right",
    "default_model": {
      "provider": "copilot_chat",
      "model": "gpt-4o"
    },
    "version": "2"
  },
  "collaboration_panel": {
    "button": false,
    "dock": "right"
  },
  "outline_panel": {
    "button": false,
    "dock": "left",
    "indent_guides": {
      "show": "never"
    },
    "scrollbar": {
      "show": "never"
    },
    "folder_icons": false,
    "file_icons": false,
    "git_status": false,
    "indent_size": 12
  },
  "chat_panel": {
    "button": "when_in_call",
    "dock": "right"
  },
  "notification_panel": {
    "button": false
  },
  "project_panel": {
    "button": true,
    "dock": "left",
    "git_status": false,
    "auto_fold_dirs": false,
    "indent_guides": {
      "show": "never"
    },
    "scrollbar": {
      "show": "never"
    },
    "indent_size": 12,
    "folder_icons": true,
    "file_icons": true,
    "entry_spacing": "comfortable",
    "show_diagnostics": "off"
  },
  "tabs": {
    "file_icons": true,
    "git_status": false
  },
  "preview_tabs": {
    "enabled": true,
    "enable_preview_from_code_navigation": true,
    "enable_preview_from_file_finder": true
  },
  "tab_bar": {
    "show": true,
    "show_nav_history_buttons": false
  },
  "max_tabs": null,
  "toolbar": {
    "breadcrumbs": false,
    "quick_actions": false,
    "selections_menu": false
  },
  "file_finder": {
    "modal_max_width": "small",
    "file_icons": true
  },
  "indent_guides": {
    "enabled": true,
    "active_line_width": 2,
    "coloring": "indent_aware"
  },
  "show_user_picture": false,
  "git_panel": {
    "button": true,
    "dock": "right",
    "status_style": "label_color"
  },
  "edit_predictions": {
    "mode": "subtle",
    "disabled_globs": null
  },
  "relative_line_numbers": false,

  // buffer, editor settings
  "buffer_font_size": 13,
  "buffer_font_family": "JetBrains Mono",
  "buffer_font_weight": 500,
  "buffer_font_features": {
    "ss01": true,
    "ss02": true,
    "ss03": true,
    "ss04": true,
    "ss05": true,
    "ss06": true,
    "zero": true,
    "onum": true,
    "calt": true
  },
  "scrollbar": {
    "show": "never"
  },
  "current_line_highlight": "gutter",
  "show_edit_predictions": true,
  "inlay_hints": {
    "enabled": true,
    "show_other_hints": true,
    "show_parameter_hints": false,
    "show_type_hints": false
  },
  "gutter": {
    "code_actions": false,
    "line_numbers": false,
    "runnables": false,
    "folds": true
  },
  "cursor_shape": "bar",
  "soft_wrap": "none",
  "git": {
    "git_gutter": "tracked_files",
    "gutter_debounce": 200,
    "inline_blame": {
      "enabled": false
    },
    "hunk_style": "staged_hollow"
  },

  // Terminals and command executions
  "terminal": {
    "font_family": "JetBrainsMono Nerd Font Mono",
    "line_height": "comfortable",
    "font_size": 12.5,
    "font_weight": 600,
    "dock": "bottom",
    "cursor_shape": "bar",
    "blinking": "on",
    "copy_on_select": false
  },

  // extension & managements
  "file_scan_exclusions": [
    "**/.git",
    "**/.svn",
    "**/.hg",
    "**/.next",
    "**/.astro",
    "**/.vercel",
    "**/CVS",
    "**/.DS_Store",
    "**/Thumbs.db",
    "**/.classpath",
    "**/.settings",
    "**/.vscode",
    "**/node_modules",
    "**/dist",
    "**/build",
    "**/.react-router",
    "**/*.gen*",
    "**/api.*",
    "**/client.*",
    "**/ssr.*"
  ],
  "file_types": {
    "JSON": [".prettierrc"],
    "Markdown": ["LICENSE"]
  },

  // Languages specific settings
  // used to settings the languages configurations including formatter, linter, etc.
  "languages": {
    "Markdown": {
      "format_on_save": "on"
    }
  },
  "experimental.theme_overrides": {}
}
