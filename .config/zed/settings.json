// Zed settings
//
// For information on how to configure Zed: true see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run the `open default settings` command
// from the command palette or from `Zed` application menu.
{
  "features": {
    "edit_prediction_provider": "zed",
  },

  // theme, icons, tweaks
  "theme": {
    "dark": "One Thing Dark",
    "light": "One Thing Light",
  },
  "icon_theme": "Zed (Default)",

  // panels and features
  "agent": {
    "default_profile": "ask",
    "button": false,
    "dock": "right",
    "default_model": {
      "provider": "google",
      "model": "gemini-2.5-flash",
    },
  },
  "search": {
    "button": false,
  },
  "collaboration_panel": {
    "button": false,
    "dock": "right",
  },
  "outline_panel": {
    "button": false,
    "dock": "left",
    "indent_guides": {
      "show": "never",
    },
    "scrollbar": {
      "show": "never",
    },
    "folder_icons": false,
    "file_icons": false,
    "git_status": false,
    "indent_size": 12,
  },
  "notification_panel": {
    "button": false,
  },
  "project_panel": {
    "button": false,
    "dock": "left",
    "git_status": false,
    "auto_fold_dirs": false,
    "indent_guides": {
      "show": "never",
    },
    "scrollbar": {
      "show": "never",
    },
    "indent_size": 12,
    "folder_icons": true,
    "file_icons": true,
    "entry_spacing": "comfortable",
    "show_diagnostics": "off",
    "sticky_scroll": false,
    "auto_reveal_entries": false,
    "hide_root": true,
    "default_width": 320,
  },
  "git_panel": {
    "button": false,
    "dock": "right",
    "status_style": "label_color",
  },
  "diagnostics": {
    "button": false,
  },
  "debugger": {
    "button": false,
  },
  "global_lsp_settings": { "button": false },

  // interfaces configs
  "ui_font_family": ".SystemUIFont",
  "ui_font_weight": 500,
  "ui_font_size": 15.5,
  "format_on_save": "on",
  "show_call_status_icon": false,
  "formatter": "auto",
  "ui_font_features": {
    "ss01": true,
    "ss02": true,
    "ss03": true,
    "ss04": true,
    "ss05": true,
    "ss06": true,
    "zero": true,
    "onum": true,
    "calt": true,
  },

  "tabs": {
    "file_icons": true,
    "git_status": false,
  },
  "preview_tabs": {
    "enabled": true,
    "enable_keep_preview_on_code_navigation": true,
    "enable_preview_from_file_finder": true,
  },
  "tab_bar": {
    "show": false,
    "show_nav_history_buttons": false,
  },
  "max_tabs": null,
  "toolbar": {
    "breadcrumbs": false,
    "quick_actions": false,
    "selections_menu": false,
  },
  "file_finder": {
    "modal_max_width": "small",
    "file_icons": true,
  },
  "indent_guides": {
    "enabled": true,
    "active_line_width": 2,
    "coloring": "indent_aware",
  },
  "edit_predictions": {
    "mode": "subtle",
    "disabled_globs": null,
  },
  "relative_line_numbers": "disabled",

  // buffer, editor settings
  "buffer_font_size": 13,
  "buffer_font_family": "JetBrains Mono",
  "buffer_font_weight": 500,
  "buffer_font_features": {
    "ss01": true,
    "ss02": true,
    "ss03": true,
    "ss04": true,
    "ss05": true,
    "ss06": true,
    "zero": true,
    "onum": true,
    "calt": true,
  },
  "scrollbar": {
    "show": "never",
  },
  "current_line_highlight": "gutter",
  "show_edit_predictions": true,
  "inlay_hints": {
    "enabled": true,
    "show_other_hints": true,
    "show_parameter_hints": false,
    "show_type_hints": false,
  },
  "gutter": {
    "line_numbers": false,
    "runnables": false,
    "folds": true,
  },
  "cursor_shape": "bar",
  "soft_wrap": "none",
  "git": {
    "git_gutter": "tracked_files",
    "gutter_debounce": 200,
    "inline_blame": {
      "enabled": false,
    },
    "hunk_style": "staged_hollow",
  },

  // Terminals and command executions
  "terminal": {
    "font_family": "JetBrainsMono Nerd Font Mono",
    "line_height": "comfortable",
    "font_size": 12.5,
    "font_weight": 600,
    "dock": "bottom",
    "cursor_shape": "bar",
    "blinking": "on",
    "button": false,
    "toolbar": {
      "breadcrumbs": false,
    },
    "copy_on_select": true,
  },

  // extension & managements
  "file_scan_exclusions": [
    "**/.git",
    "**/.svn",
    "**/.hg",
    "**/.next",
    "**/.astro",
    "**/.vercel",
    "**/CVS",
    "**/.DS_Store",
    "**/Thumbs.db",
    "**/.classpath",
    "**/.settings",
    "**/.vscode",
    "**/node_modules",
    "**/dist",
    "**/.output",
    "**/build",
    "**/.react-router",
    "**/*.gen*",
    "**/.content-collections",
  ],

  // Languages specific settings
  // used to settings the languages configurations including formatter, linter, etc.
  "languages": {},
}
